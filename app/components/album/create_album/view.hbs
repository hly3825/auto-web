{{#component "js-comp create-album"}}
<p class="components-title"><strong class="tab-name">专辑创建</strong></p>
<form class="form form-aligned album-form" data-id="{{_DATA_.album.id}}" novalidate="true">
  {{#if _DATA_.album.id}}<input type="hidden" name="id" value="{{_DATA_.album.id}}">{{/if}}
  <div class="control-group">
    <hr>
    <h4>专辑信息:</h4>
  </div>
  <div class="control-group control-group-2">
    <label for=""><span class="required">*</span>专辑名称(4-10字):</label>
    <input required name="name" type="text" maxlength="10" minlength="4" value="{{_DATA_.album.name}}">
    <span class="note-error">专辑长度4-10字</span>
    <span class="note-error-empty">请输入专辑名称</span>
  </div>
  <div class="control-group control-group">
    <label for=""><span class="required">*</span>Pad端导语(4-12字):</label>
    <input required name="padGuide" type="text" maxlength="12" minlength="4" value="{{_DATA_.album.padGuide}}">
    <span class="note-error">Pad端导语长度4-12字</span>
    <span class="note-error-empty">请输入Pad端导语</span>
  </div>
  <div class="control-group control-group">
    <label for=""><span class="required">*</span>标签(最多选3个):</label>
    <input {{#of "5" _DATA_.album.tag}}checked="checked"{{/of}} required name="tag" type="checkbox" value="5">臭美妞
    <input {{#of "2" _DATA_.album.tag}}checked="checked"{{/of}} required name="tag" type="checkbox" value="2">生活家
    <input {{#of "4" _DATA_.album.tag}}checked="checked"{{/of}} required name="tag" type="checkbox" value="4">骚包男
    <input {{#of "3" _DATA_.album.tag}}checked="checked"{{/of}} required name="tag" type="checkbox" value="3">吃不胖
    <input {{#of "7" _DATA_.album.tag}}checked="checked"{{/of}} required name="tag" type="checkbox" value="7">魔法镜
    <input {{#of "6" _DATA_.album.tag}}checked="checked"{{/of}} required name="tag" type="checkbox" value="6">爱运动
    <input {{#of "8" _DATA_.album.tag}}checked="checked"{{/of}} required name="tag" type="checkbox" value="8">熊孩子
    <input {{#of "1" _DATA_.album.tag}}checked="checked"{{/of}} required name="tag" type="checkbox" value="1">数码控
    <span class="note-error">Pad端导语长度4-12字</span>
    <span class="note-error-empty">请输入标签</span>
  </div>
  <div class="control-group control-group">
    <label for=""><span class="required">*</span>区块背景色:</label>
    <select required name="textBgId" class="select select164">
      <option value="" selected="">请选择</option>
      <option {{#equals _DATA_.album.textBgId "1"}}selected{{/equals}}  value="1">浅色</option>
      <option {{#equals _DATA_.album.textBgId "2"}}selected{{/equals}}  value="2">深色</option>
    </select>
    <span class="note-error-empty">请选区块背景色</span>
  </div>
  <div class="control-group control-group">
    <label for=""><span class="required">*</span>手机端头图(640*330,最大50KB)</label>
    <img class=" {{#if _DATA_.album.bannerImgPhone}} {{else}}icon-null{{/if}} img"  src="{{_DATA_.album.bannerImgPhone}}"/>
    <input required type="hidden" name="bannerImgPhone" class="info-input" value="{{_DATA_.album.bannerImgPhone}}">
    <div class="btn btn-upload btn-primary">
      <span>上传</span>
      <input data-condition='{"width":640,"height":330,"size":51200}' type="file" name="file" single>
    </div>
    <span class="note-error-empty">请上手机端头图</span>
  </div>
  <div class="control-group control-group">
    <label for=""><span class="required">*</span>手机端封面图(无文字,640*330,最大50KB)</label>
    <img class=" {{#if _DATA_.album.coverImgPhone}} {{else}}icon-null{{/if}} img"  src="{{_DATA_.album.coverImgPhone}}"/>
    <input required type="hidden" name="coverImgPhone" class="info-input" value="{{_DATA_.album.coverImgPhone}}">
    <div class="btn btn-upload btn-primary">
      <span>上传</span>
      <input data-condition='{"width":640,"height":330,"size":51200}' type="file" name="file" single>
    </div>
    <span class="note-error-empty">手机端封面图</span>
  </div>
  <div class="control-group control-group">
    <label for=""><span class="required">*</span>Pad端封面图(400*400,最大50KB)</label>
    <img class=" {{#if _DATA_.album.bannerImgPad}} {{else}}icon-null{{/if}} img"  src="{{_DATA_.album.bannerImgPad}}"/>
    <input required type="hidden" name="bannerImgPad" class="info-input" value="{{_DATA_.album.bannerImgPad}}">
    <div class="btn btn-upload btn-primary">
      <span>上传</span>
      <input data-condition='{"width":400,"height":400,"size":51200}' type="file" name="file" single>
    </div>
    <span class="note-error-empty">Pad端封面图</span>
  </div>
  <div class="control-group control-group">
    <label for=""><span class="required">*</span>Pad端头图(有文字创意,2048*380,最大50KB)</label>
    <img class=" {{#if _DATA_.album.coverImgPad}} {{else}}icon-null{{/if}} img"  src="{{_DATA_.album.coverImgPad}}"/>
    <input required type="hidden" name="coverImgPad" class="info-input" value="{{_DATA_.album.coverImgPad}}">
    <div class="btn btn-upload btn-primary">
      <span>上传</span>
      <input data-condition='{"width":2048,"height":380,"size":51200}' type="file" name="file" single>
    </div>
    <span class="note-error-empty">Pad端头图</span>
  </div>
  <div class="control-group control-group">
    <label for="">男装接入图(非必填,有文字,有阴影,250*400,最大50KB)</label>
    <img class=" {{#if _DATA_.album.menClothImg}} {{else}}icon-null{{/if}} img"  src="{{_DATA_.album.menClothImg}}"/>
    <input type="hidden" name="menClothImg" class="info-input" value="{{_DATA_.album.menClothImg}}">
    <div class="btn btn-upload btn-primary">
      <span>上传</span>
      <input data-condition='{"width":250,"height":400,"size":51200}' type="file" name="file" single>
    </div>
    <span class="note-error-empty">男装接入图</span>
  </div>
  <div class="control-group">
    <hr>
    <h4>商品信息:</h4>
  </div>
  <div class="control-group control-group">
    <div class="btn btn-upload btn-success">
      <span>上传excel</span>
      <input data-excel="" type="file" name="file" single>
    </div>
    <input type="button" class="btn btn-success js-add-item" value="添加商品"/>
  </div>
  <div class="control-group control-group">
    <table class="table table-striped item-table" data-json="{{json _DATA_.items}}">
      <thead>
        <tr>
          <th width="125">淘宝商品ID</th>
          <th width="265">图片(590*590,最大40KB)</th>
          <th width="125">推荐语(8-20字)</th>
          <th width="220">操作</th>
        </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>
  <div class="align-center">
    <input type="submit" class="btn btn-primary" value="保存">
    &nbsp;
    <a href="/album/album-manage" class="btn btn-primary">返回</a>
  </div>
</form>
{{/component}}

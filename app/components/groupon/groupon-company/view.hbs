{{#component "js-comp groupon-company"}}
<p class="components-title"><strong class="tab-name">用户信息汇总(<span class="total-num">{{_DATA_.total}}</span>)</strong></p>
<p>
  <a class="btn btn-primary" href="/api/export/groupuser">导出用户信息</a>
</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th width="800">企业名称</th>
      <th width="400">注册员工数量</th>
    </tr>
  </thead>
  <tbody>
    {{#each _DATA_.data}}
      <tr>
        <td>{{this.companyName}}</td>
        <td>{{this.totalCount}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
<p></p>
<div class="inline-pagination align-right">
  <div class="groupon-company-pagination" data-total="{{_DATA_.total}}"></div>
</div>
{{/component}}

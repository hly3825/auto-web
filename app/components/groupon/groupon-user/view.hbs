{{#component "js-comp groupon-user"}}
<p class="components-title"><strong class="tab-name">用户信息汇总</strong></p>
<div class="status-contents">
  <div class="stat blue-light">
    <div class="visual">
      <i class="fa fa-bar-chart fa-3x fa-inverse fa-border fa-fw"></i>
    </div>
    <div class="detail">
      <div class="number">
        {{_DATA_.totalCount}}
      </div>
      <div class="desc">
        总用户数
      </div>
    </div>
  </div>
  <div class="stat blue-light">
    <div class="visual">
      <i class="fa fa-line-chart fa-3x fa-inverse fa-border fa-fw"></i>
    </div>
    <div class="detail">
      <div class="number">
        {{_DATA_.yesterdayDeltaCount}}
      </div>
      <div class="desc">
        昨日新增用户数
      </div>
    </div>
  </div>
  <div class="stat blue-light">
    <div class="visual">
      <i class="fa fa-line-chart fa-3x fa-inverse fa-border fa-fw"></i>
    </div>
    <div class="detail">
      <div class="number">
        {{_DATA_.todayDeltaCount}}
      </div>
      <div class="desc">
        今日新增用户数
      </div>
    </div>
  </div>
</div>
<p class="components-title"><strong class="tab-name">用户信息(<span class="total-num">{{_DATA_.groupUserPaging.total}}</span>)</strong></p>
<div class="block block-search">
  <form class="form groupon-user-form" novalidate="true">
    <fieldset>
      <span class="span3">
        <label for="">用户昵称</label>
        <input name="nickName" type="text" value="{{nickName}}">
      </span>
      <span class="span3">
        <label for="">手机号</label>
        <input name="mobile" type="text" value="{{mobile}}">
      </span>
      <span class="span3">
        <label for="">邮箱</label>
        <input name="email" type="text" value="{{email}}">
      </span>
    </fieldset>
    <fieldset>
      <span class="span3">
        <label for="">公司名称</label>
        <input name="companyName" type="text" value="{{companyName}}">
      </span>
      <span class="span1 last">
        <button type="submit" class="btn btn-primary">筛选</button>
        &nbsp;
        <a href="/group/user">取消</a>
      </span>
    </fieldset>
  </form>
</div>
<p>
</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th width="400">用户昵称</th>
      <th width="400">手机号</th>
      <th width="400">邮箱</th>
      <th width="400">所在企业</th>
    </tr>
  </thead>
  <tbody>
    {{#each _DATA_.groupUserPaging.data}}
      <tr>
        <td>{{nickname}}</td>
        <td>{{mobile}}</td>
        <td>{{email}}</td>
        <td>{{companyName}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
<p></p>
<div class="inline-pagination align-right">
  <div class="groupon-user-pagination" data-total="{{_DATA_.groupUserPaging.total}}"></div>
</div>
{{/component}}
